<span id='nav'>
  <h3>Welcome, <%= session[:email]%></h3>
  <form id="logout" method="POST" action="/session">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" class="btn btn-default" value="Logout">
  </form>
</span>

<table class='table'>
  <thead>
    <tr>
      <th>Category</th>
      <th>Number of files</th>
      <th>Basic Weight (MB)</th>
    </tr>
  </thead>
  <% @data.all_categories.each do |category| %>
    <tr>
      <td>
        <%= category.capitalize %>
      </td>
      <td>
        <%= @data.count(category) %>
      </td>
      <td>
        <%= @data.basic_weight(category) %>
      </td>
    </tr>
  <% end %>
</table>
<table class='table'>
  <tr>
    <th>Total basic weight (MB): </th>
    <td><%= @data.total_basic_weight %></td>
  </tr>
  <tr>
  <th>Gravity Displacement (MB): </th>
  <td><%= @data.gravity_displacement %></td>
  </tr>
</table>


